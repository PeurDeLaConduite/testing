{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "strict": true,
        "noEmit": true,
        "jsx": "preserve",
        "incremental": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": ["dom", "dom.iterable", "esnext"],

        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@app/*": ["app/*"],
            "@src/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@context/*": ["src/context/*"],
            "@utils/*": ["src/utils/*"],
            "@public/*": ["public/*"],
            "@test/*": ["tests/*"],
            "@entities/*": ["src/entities/*"],
            "@packages/types/*": ["../../packages/types/src/*"],
            // Pont de migration : dâ€™abord legacy local, puis nouveaux packages
            "@services/*": ["src/services/*", "../../packages/services/src/*"]
        },

        "plugins": [{ "name": "next" }]
    },
    "include": [
        "next-env.d.ts",
        "app/**/*.ts",
        "app/**/*.tsx",
        "app/**/*.js",
        "app/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "public/**/*.json",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
