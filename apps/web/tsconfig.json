{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "strict": true,
        "noEmit": true,
        "jsx": "preserve",
        "incremental": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "lib": ["dom", "dom.iterable", "esnext"],

        "baseUrl": "../..",
        "paths": {
            "@types/*": ["packages/types/src/*"],
            "@domain/*": ["packages/domain/src/*"],
            "@services/app/*": ["packages/services/src/app/*"],
            "@services/adapters/*": ["packages/services/src/adapters/*"],
            "@ui/*": ["packages/ui/src/*"],
            "@/*": ["apps/web/*"],
            "@app/*": ["apps/web/app/*"],
            "@src/*": ["apps/web/src/*"],
            "@assets/*": ["apps/web/src/assets/*"],
            "@components/*": ["apps/web/src/components/*"],
            "@hooks/*": ["apps/web/src/hooks/*"],
            "@context/*": ["apps/web/src/context/*"],
            "@utils/*": ["apps/web/src/utils/*"],
            "@public/*": ["apps/web/public/*"],
            "@test/*": ["apps/web/tests/*"],
            "@services/*": ["apps/web/src/services/*", "packages/services/src/*"]
        },

        "plugins": [{ "name": "next" }]
    },
    "include": [
        "next-env.d.ts",
        "app/**/*.ts",
        "app/**/*.tsx",
        "app/**/*.js",
        "app/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "public/**/*.json",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
}
