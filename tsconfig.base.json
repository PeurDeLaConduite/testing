{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@packages/types/*": ["packages/types/src/*"],
            "@packages/domain/*": ["packages/domain/src/*"],
            "@packages/ui/*": ["packages/ui/src/*"],
            "@packages/services/*": ["packages/services/src/*"],
            "@packages/services/app/*": ["packages/services/src/app/*"],
            "@packages/services/adapters/*": ["packages/services/src/adapters/*"],

            "@apps/*": ["apps/web/*"],
            "@app/*": ["apps/web/app/*"],
            "@src/*": ["apps/web/src/*"],
            "@assets/*": ["apps/web/src/assets/*"],
            "@components/*": ["apps/web/src/components/*"],
            "@hooks/*": ["apps/web/src/hooks/*"],
            "@context/*": ["apps/web/src/context/*"],
            "@utils/*": ["apps/web/src/utils/*"],
            "@public/*": ["apps/web/public/*"],
            "@test/*": ["apps/web/tests/*"],
            "@/*": ["./*"]
        }
    },
    "references": [
        {
            "path": "packages/types"
        },
        {
            "path": "packages/domain"
        },
        {
            "path": "packages/services"
        },
        {
            "path": "packages/ui"
        },
        {
            "path": "apps/web"
        }
    ]
}
