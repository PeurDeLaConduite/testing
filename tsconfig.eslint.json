{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": ["node", "playwright"]
    },
    "include": [
        "e2e/**/*.ts",
        "e2e/**/*.tsx",
        "app/**/*.ts",
        "app/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        "next-env.d.ts",
        "public/**/*.json",
        ".next/types/**/*.ts",
        "playwright.config.ts",
        "*.config.ts",
        "*.*config.ts"
    ],
    "exclude": ["node_modules", "amplify", ".Help/examples", ".next", "dist"]
}
