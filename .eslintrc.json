{
  "root": true,
  "extends": ["eslint:recommended"],
  "plugins": ["boundaries"],
  "settings": {
    "boundaries/elements": [
      { "type": "types", "pattern": "packages/types/src/**" },
      { "type": "domain", "pattern": "packages/domain/src/**" },
      { "type": "services-app", "pattern": "packages/services/src/app/**" },
      { "type": "services-adapters", "pattern": "packages/services/src/adapters/**" },
      { "type": "ui", "pattern": "packages/ui/src/**" }
    ]
  },
  "overrides": [
    {
      "files": ["packages/**/src/**/*.{ts,tsx,js,jsx}", "apps/web/**/*.{ts,tsx,js,jsx}"],
      "rules": {
        "boundaries/element-types": [
          "error",
          {
            "default": "disallow",
            "ui": ["types"],
            "domain": ["types"],
            "services-app": ["domain", "types"],
            "services-adapters": ["services-app", "domain", "types"]
          }
        ]
      }
    }
  ]
}
