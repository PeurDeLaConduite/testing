{
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "incremental": true,
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@app/*": ["app/*"],
            "@src/*": ["src/*"],
            "@amplify/*": ["amplify/*"],
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"],
            "@context/*": ["src/context/*"],
            "@utils/*": ["src/utils/*"],
            "@assets/*": ["src/assets/*"],
            "@services/*": ["src/services/*"],
            "@myTypes/*": ["src/types/*"],
            "@entities/*": ["src/entities/*"],
            "@public/*": ["public/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },

    "include": [
        "next-env.d.ts",
        "app/**/*.ts",
        "app/**/*.tsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        "public/**/*.json",
        ".next/types/**/*.ts",
        "amplify/**/*.ts",

        "src/components/svg_Icon/utils/Arrow.jsx",
        "src/components/slider/SliderArrow.jsx",
        "src/components/slider/SunBG.tsx",
        "src/components/header/HeaderGhost.jsx",
        "src/home/service/Component/servicesData.ts",
        "src/utils/setT.js",
        "app/ScrollSectionsWrapper.jsx",
        "src/home/about/AboutCard.jsx",
        "src/home/about/LoadMoreButton.jsx",
        "src/home/contact-section/contactForm/form.jsx",
        "src/home/contact-section/contactForm/formSuite.jsx",
        "src/home/slider/sliderItem/SldTitle.jsx",
        "app/layout.tsx"
    ],
    "exclude": ["node_modules", ".next", "dist", "build", ".amplify"]
}
